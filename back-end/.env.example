# PostgreSQL Configuration
POSTGRES_DB=nfl_draft
POSTGRES_USER=nfl_draft_user
POSTGRES_PASSWORD=nfl_draft_pass
POSTGRES_PORT=5432

# Database URL for SQLx (used by Rust backend)
DATABASE_URL=postgresql://nfl_draft_user:nfl_draft_pass@localhost:5432/nfl_draft

# SQLx offline mode (uses .sqlx/ cache instead of requiring live database at compile time)
# Set to false or remove when you need to regenerate the query cache with: cargo sqlx prepare
SQLX_OFFLINE=true

# Test Database (for running tests)
TEST_DATABASE_URL=postgresql://nfl_draft_user:nfl_draft_pass@localhost:5432/nfl_draft_test

# pgAdmin Configuration (optional)
PGADMIN_EMAIL=admin@nfldraft.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Backend API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Seed API Key (optional - enables POST /api/v1/admin/seed-players endpoint)
# SEED_API_KEY=your-secure-random-key-here

# Frontend Configuration
VITE_API_URL=http://localhost:8000
